# Socializer Configuration Template
# Copy this file to .env and fill in your values

# ===== API Configuration =====
SOCIALIZER_API_TOKEN=your_secret_token_here
SOCIALIZER_DB=socializer.sqlite

# ===== AI/LLM Configuration =====
LLM_PROVIDER=mock
# Options: mock | gemini
GEMINI_API_KEY=your_gemini_api_key_here
GITHUB_TOKEN=ghp_xxx

# ===== Instagram Credentials =====
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Optional: Instagram Session Cookies (for session persistence)
# INSTAGRAM_SESSIONID=your_session_id
# INSTAGRAM_CSRFTOKEN=your_csrf_token
# INSTAGRAM_DS_USER_ID=your_user_id

# ===== TikTok Credentials =====
TIKTOK_USERNAME=your_tiktok_username
TIKTOK_PASSWORD=your_tiktok_password

# Optional: TikTok Session Cookies
# TIKTOK_SESSIONID=your_session_id
# TIKTOK_CSRF_TOKEN=your_csrf_token

# ===== Application Settings =====
API_PORT=8000
DEBUG=True

# ===== Data & Output Directories =====
OUTPUT_DIR=content
DATA_DIR=data
SQLITE_PATH=data/radar.sqlite

# ===== Playwright Settings =====
# Set to 'true' to run browser in headless mode
HEADLESS=false

# Browser viewport
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# ===== Scheduling Settings =====
# Default timezone for scheduling (e.g., UTC, Europe/Berlin, America/New_York)
TIMEZONE=UTC

# ===== Logging =====
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
